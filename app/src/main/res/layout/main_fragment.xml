<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include
                layout="@layout/small_toolbar"
                android:id="@+id/main_toolbar"
        />
        <ImageView
                android:layout_alignParentStart="true"
                android:layout_below="@id/main_toolbar"
                android:id="@+id/main_dtp_image"
                android:background="@drawable/collision"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/main_dtp_text"
                android:scaleType="fitCenter"
                android:layout_alignBottom="@id/main_dtp_text"
                android:layout_width="@dimen/main_buttons_width"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/main_dtp_text"
                android:text="О боже ДТП"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="@color/colorAccent"
                android:textAlignment="center"
                android:layout_below="@id/main_toolbar"
                android:layout_alignParentEnd="true"
                android:layout_toStartOf="@+id/main_inspector_image"
                android:layout_width="180dp"
                android:layout_height="@dimen/main_buttons_height"/>
        <ImageView
                android:id="@+id/main_inspector_image"
                android:layout_width="@dimen/main_buttons_width"
                android:layout_below="@id/main_dtp_text"
                android:layout_alignParentEnd="true"
                android:background="@drawable/police"
                android:layout_alignBottom="@id/main_inspector_image"
                android:layout_height="@dimen/main_buttons_height"/>
        <TextView
                android:id="@+id/main_inspector_text"
                android:layout_marginEnd="8dp"
                android:text="Остановил инспектор"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="@color/colorAccent"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_below="@id/main_dtp_image"
                android:layout_width="180dp"
                android:layout_height="@dimen/main_buttons_height"/>
        <ImageView
                android:id="@+id/main_cons_image"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/main_inspector_text"
                android:background="@drawable/discussion"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/main_buttons_width"
                android:layout_height="@dimen/main_buttons_height"/>
        <TextView
                android:id="@+id/main_cons_text"
                android:text="Консультация"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:layout_alignBottom="@id/main_cons_image"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_width="180dp"
                android:layout_below="@id/main_inspector_image"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/main_buttons_height"/>
    </RelativeLayout>
</ScrollView>